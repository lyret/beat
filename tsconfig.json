{
	"compilerOptions": {
		"sourceMap": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"outDir": "build/",
		"baseUrl": ".",
		"typeRoots": [
			"./node_modules/@types",
			"./source/interfaces"
		]
	},
	"exclude": [
		"node_modules",
		"build"
	]
}