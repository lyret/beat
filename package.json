{
	"name": "beat",
	"version": "0.3.1",
	"scripts": {
		"watch": "npm run verify && npm run tsc",
		"compile": "npm run verify && npm run tsc",
		"test": "npm run verify && ts-node source/test.ts",
		"document": "echo 'Not implemented'",
		"verify": "var=$(cat .nvmrc); node -v | grep -q $var || printf \"\\033[0;31mIncorrect version of node installed! Install and use $var\\033[0m.\n\"",
		"tsc": "./node_modules/typescript/bin/tsc -p ./tsconfig.json",
		"preinstall": "npm run verify",
		"postinstall": "vscode-install"
	},
	"author": "Viktor Lyresten <viktor@lyresten.se>",
	"license": "UNLICENCED",
	"description": "A declarative programming and data serialization language",
	"homepage": "https://github.com/lyret/beat#readme",
	"bugs": {
		"url": "https://github.com/lyret/beat/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lyret/beat.git"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.27.0",
		"node": "*"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"contributes": {
		"languages": [
			{
				"id": "beat",
				"aliases": [
					"BEAT",
					"Beat Language"
				],
				"extensions": [
					".b"
				]
			}
		],
		"grammars": [
			{
				"language": "beat",
				"scopeName": "source.beat",
				"path": "./syntax/beat.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Beat language server configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems reported at once by the language server"
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server"
				}
			}
		}
	},
	"devDependencies": {
		"@types/lodash": "^4.14.116",
		"@types/node": "^10.14.15",
		"ts-node": "^8.3.0",
		"typescript": "^3.1.1",
		"vscode": "^1.1.21",
		"vscode-languageclient": "^5.1.0",
		"vscode-languageserver": "^4.4.2"
	},
	"dependencies": {
		"chevrotain": "^4.1.0",
		"lodash": "^4.17.11",
		"table-layout": "^1.0.0",
		"typescript": "^3.1.1",
		"vscode-languageserver": "^4.4.2"
	}
}
