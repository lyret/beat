{
  "name": "beat language syntax",
  "version": "0.2.0",
  "scopeName": "source.beat",
  "fileTypes": [
    "b"
  ],
  "patterns": [
    {
      "match": "\\:",
      "name": "keyword.control"
    },
    {
      "match": "\\#",
      "name": "keyword.control"
    },
    {
      "match": "[A-Za-z0-9]+",
      "name": "constant"
    },
    {
      "match": "\\/.*\\/",
      "name": "comment"
    },
    {
      "match": "\\[",
      "name": "entity.name.tag"
    },
    {
      "match": "\\]",
      "name": "entity.name.tag"
    },
    {
      "match": "\\{",
      "name": "meta.tag"
    },
    {
      "match": "\\}",
      "name": "meta.tag"
    },
    {
      "match": "\\(",
      "name": "entity.name.tag"
    },
    {
      "match": "\\)",
      "name": "entity.name.tag"
    },
    {
      "match": "\\=",
      "name": "keyword.control"
    },
    {
      "match": "\\?",
      "name": "keyword.control"
    },
    {
      "match": "\\.\\.\\.",
      "name": "keyword.control"
    },
    {
      "match": "\\:\\:",
      "name": "keyword.control"
    },
    {
      "match": "l",
      "name": "keyword.control"
    },
    {
      "match": "->",
      "name": "support.variable"
    },
    {
      "match": "=[>|=]",
      "name": "support.variable"
    },
    {
      "match": "@",
      "name": "support.function"
    },
    {
      "match": "string",
      "name": "constant.language"
    },
    {
      "match": "number",
      "name": "constant.language"
    },
    {
      "match": "bool",
      "name": "constant.language"
    },
    {
      "match": "any",
      "name": "constant.language"
    }
  ]
}