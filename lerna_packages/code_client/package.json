{
	"name": "beat-vscode-client",
	"version": "0.1.0",
	"description": "A VS code extension that provides language services for the Beat programming language",
	"author": "Viktor Lyresten <viktor@lyresten.se>",
	"license": "UNLICENCED",
	"publisher": "Viktor Lyresten <viktor@lyresten.se>",
	"categories": [ "Programming Languages" ],
	"keywords": [
		"multi-root ready"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lyret/beat"
	},
	"main": "dist/client",
	"engines": {
		"vscode": "^1.27.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"contributes": {
		"languages": [
			{
				"id": "beat",
				"aliases": [
					"BEAT", "Beat Language"
				],
				"extensions": [".b"]
			}
		],
		"grammars": [
			{
				"language": "beat",
				"scopeName": "source.beat",
				"path": "./syntax/beat.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Beat language server configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems reported at once by the language server"
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server"
				}
			}
		}
	},
	"dependencies": {
		"vscode": "^1.1.21",
		"vscode-languageclient": "^5.1.0"
	},
	"scripts": {
		"vscode:prepublish": "npm run update-vscode && npm run compile",
		"postinstall": "npm run update-vscode",
		"watch": "tsc -w -p ./tsconfig.json",
		"compile": "tsc -p ./tsconfig.json",
		"update-vscode": "vscode-install"
	}
}
