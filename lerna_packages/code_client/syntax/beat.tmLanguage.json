{
	"name": "beat language syntax",
	"version": "0.1.0",
	"scopeName": "source.beat",
	"fileTypes": [
		"b"
	],
	"patterns": [
		{
			"begin": "<\/\/",
			"end": "\/\/>",
			"name": "comment.block"
		},
		{
			"match": "(@)([a-z|A-Z|0-9]*)\\b",
			"name": "entity.function",
			"captures": {
				"1": {
					"name": "keyword.operator"
				},
				"2": {
					"name": "entity.name.function"
				}
			}
		},
		{
			"match": ":",
			"name": "keyword.operator"
		},
		{
			"match": "(<\/?)([a-z|A-Z|0-9]*)(\/?>)",
			"captures": {
				"1": {
					"name": "keyword.control"
				},
				"2": {
					"name": "entity.name.tag"
				},
				"3": {
					"name": "keyword.control"
				}
			}
		},
		{
			"match": "(\\[)(.*)(\\])",
			"captures": {
				"1": {
					"name": "keyword.control"
				},
				"2": {
					"name": "string"
				},
				"3": {
					"name": "keyword.control"
				}
			}
		}
	]
}